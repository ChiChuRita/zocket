{
  "name": "@zocket/core",
  "version": "0.1.0",
  "description": "Type-safe WebSocket library similar to tRPC",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/client.d.ts",
      "import": "./dist/client/client.js"
    },
    "./server": {
      "types": "./dist/server/server.d.ts",
      "import": "./dist/server/server.js"
    },
    "./adapters/bun": {
      "types": "./dist/server/adapters/bun.d.ts",
      "import": "./dist/server/adapters/bun.js"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "bun test"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0",
    "partysocket": "^1.1.4",
    "reconnecting-websocket": "^4.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "typescript": "^5.0.0",
    "valibot": "^1.1.0",
    "zod": "^4.1.12"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "websocket",
    "typescript",
    "type-safe",
    "real-time",
    "trpc",
    "ws",
    "socket",
    "validation",
    "zod",
    "valibot"
  ],
  "author": "Rahul Singh <ra.singh069@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChiChuRita/zocket.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/ChiChuRita/zocket#readme",
  "bugs": {
    "url": "https://github.com/ChiChuRita/zocket/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
